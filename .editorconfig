root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.{mm,m,h,hpp,hh,hxx,c,cc,cpp,cxx}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
